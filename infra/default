server {
    server_name kyttigrammserg.zapto.org;
    location /api/ {
        client_max_body_size 20M;
        proxy_pass http://127.0.0.1:8080;
    }
    location /static_backend/ {
        root /var/www/kittygram;
        expires 30d;
    }
    location /admin/ {
        client_max_body_size 20M;
        proxy_pass http://127.0.0.1:8080;
    }
    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }
    location /media/ {
        root /var/www/kittygram;
        sendfile on;
        tcp_nopush on;
        types { image/jpeg jpg; image/png png; }
}


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/taskisergli.zapto.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/taskisergli.zapto.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    server_name taskisergli.zapto.org;

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
    }
	
    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }
    
    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }





    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/taskisergli.zapto.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/taskisergli.zapto.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = kyttigrammserg.zapto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name kyttigrammserg.zapto.org;
    listen 80;
    return 404; # managed by Certbot


}
